<Defs>

	<ThingDef>
		<defName>RBB_Bridge</defName>
		<label>Basic Bridge</label>
		<description>A basic wooden pier-style bridge. Useful for crossing rivers without getting your feet wet. Can be built on shallow water, marsh or mud.</description>
		<category>Building</category>
		<thingClass>RBB_Code.Building_Bridge</thingClass>
		<graphicData>
			<texPath>Bridge_Atlas_Planks</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags><li>Custom8</li></linkFlags>
		</graphicData>
		<uiIconPath>Bridge_Icon</uiIconPath>
		<size>(1,1)</size>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<soundImpactDefault>BulletImpactWood</soundImpactDefault>
		<drawerType>MapMeshAndRealTime</drawerType>
		<repairEffect>Repair</repairEffect>
		<filthLeaving>BuildingRubble</filthLeaving>
		<altitudeLayer>Floor</altitudeLayer>
		<passability>Standable</passability>
		<blockWind>false</blockWind>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<holdsRoof>false</holdsRoof>
		<designationCategory>Structure</designationCategory>
		<tickerType>Never</tickerType>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>300</WorkToBuild>
			<Mass>50</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>1</Beauty>
		</statBases> 
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>10</costStuffCount>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>2</multiplier>
			</li>
		</damageMultipliers>
		<CastEdgeShadows>False</CastEdgeShadows>
		<terrainAffordanceNeeded>Undefined</terrainAffordanceNeeded>
		<PathCost>2</PathCost>
		<placeWorkers>
			<li>RBB_Code.PlaceWorker_BasicBridge</li>
		</placeWorkers>
		<building>
			<isEdifice>false</isEdifice>
		</building>
	</ThingDef>
	
